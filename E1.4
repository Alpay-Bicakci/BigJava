public class Interest {
    public static void main(String[] args) {
        double balance;
        double initialBalance = 1000;
        double interestRate = 5.0 / 100;

        // Initial balance
        System.out.println("Initial Balance: " + initialBalance);

        // 1 year interest
        balance = initialBalance + (initialBalance * interestRate);
        System.out.println("Balance after one year interest: " + balance);

        // 2 year interest
        balance = balance + (balance * interestRate);
        System.out.println("Balance after two years " + balance);

        // 3 year interest
        balance = balance + (balance * interestRate);
        System.out.println("Balance after three years " + balance);

        



    }
}
